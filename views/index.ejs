<%- include('partials/html-head') %>


<body class="container-fluid">


<div class="row">
  <div class="col-md-6">
    <h1>Update your Profile Name!</h1>

    <%= console.log(profileData) %>
    
    <% for (var i=0; i< profileData.length; i++ ) { %>
      <form method="POST">  
        <input type="hidden" id="devId" name="devId" value="<%= profileData[i]._id %>"></input>
        <input type="text" id="devName" name="devName" value="<%= profileData[i].name %>"></input>
        
        <button class="btn btn-primary" type="submit" formaction="/updateProfile">Update Your Dev Name</button>
        <button class="btn btn-warning" type="submit" formaction="/deleteProfile">Delete Dev Profile</button>
      
      </form>
      <br/>
      <% } %> 
  </div>


  <div class="col-md-6">

  <h2> Add a new dev name here!</h2>

    <form action="/insertProfile" method="POST">
                
      <input type="text" id="newDevName" name="newDevName" placeholder="name goes here"></input>

      <button class="btn btn-primary" type="submit">Insert New Dev Name</button>

    </form>

  </div>
</div>


</body>
</html>